<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linLayoutGoal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvGoalName"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="02dp"
        android:layout_marginStart="02dp"
        android:layout_marginLeft="02dp"
        android:layout_marginTop="02dp"
        android:layout_marginEnd="02dp"
        android:layout_marginRight="02dp"
        android:layout_weight=".25"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarGoals"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:translationY="15dp" />

    <CheckBox
        android:id="@+id/cbGoalCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="02dp"
        android:textColor="#000000"
        android:textSize="22sp" />


</LinearLayout>
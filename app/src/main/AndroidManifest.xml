<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gseven.studentplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentPlanner">
        <activity
            android:name=".GoalTrackerActivity"
            android:label="@string/title_activity_goal_tracker"
            android:theme="@style/Theme.StudentPlanner.NoActionBar"></activity>
        <activity
            android:name=".ViewAllCoursesActivity"
            android:parentActivityName=".DegreeTrackerActivity" />
        <activity
            android:name=".EditCourseActivity"
            android:parentActivityName=".ViewAllCoursesActivity" />
        <activity
            android:name=".AddNewCourseActivity"
            android:parentActivityName=".DegreeTrackerActivity" />
        <activity android:name=".MainMenuActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DegreeTrackerActivity"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".ui.login.LoginActivity"/>
    </application>

</manifest>